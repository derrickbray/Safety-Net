<div class="container">

  <div class="hello">Hello {{ currentUser.user.email }}, Manage Your Account</div>

  <div class="grid">
    <div class="grid-left">

      <div class="admin__title">Do stuff</div>
      {{#link-to "user.pledge.create" class="category__link-full" }}Make a New Pledge ->{{/link-to}}
      {{#link-to "user.pledge.old" class="category__link-full" }}See My Old Pledges ->{{/link-to}}

      <div class="admin__title">My Current Pledges</div>

      {{#each model as |pledge|}}
        {{#if pledge.isApproved }}
          {{#if (not pledge.isClaimed)}}

            <div class="admin-side__card">
              <div class="user-pledge">Pledge: {{ pledge.name }}</div>
              <div class="user-pledge">{{ pledge.description }}</div>
              <div class="user-pledge">Contact: {{ pledge.contactInfo }}</div>
              <div class="user-pledge__end">Duration: {{ pledge.endDate }}</div>
              <div class="user-pledge">Claimed: {{ pledge.isClaimed }}</div>
              <div class="button-box">
                {{#link-to "user.pledge.edit" pledge class="btn" }}Edit{{/link-to}}
                <button type="button" {{action "toggleAndSave" pledge "isClaimed" }} class="btn">Status Change</button>
              </div>
            </div>

          {{/if}}
        {{/if}}
      {{/each}}

    </div>

    <div class="grid-right">
      {{outlet}}
    </div>
  </div>
</div>
