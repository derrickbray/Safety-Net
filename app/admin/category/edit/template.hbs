{{outlet}}
<div class="detail">
  <div class="detail-card">
    <div class="detail-card__title">Edit a Category</div>
    {{#simple-form class="card__form" startingValues=model onsubmit=(action "addCategory") as | formValues |}}
      {{input class="form__input" type="text" required=true id="name" value=formValues.name placeholder="Edit Category"}}
      <div class="button-box">
        <button type="button" {{action "deleteCategory" model }}class="btn danger">Delete</button>
        <button type="submit" class="btn">Save</button>
      </div>
    {{/simple-form}}
  </div>
</div>
